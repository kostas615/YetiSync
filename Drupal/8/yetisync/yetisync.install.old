/**
* Implements hook_schema().
* Contains information about the tables.
*/
function yetisync_schema() {

  $schema['yetisync_test2'] = array(
    'description' => 'YetiSync Accounts',
    'fields' => array(

        'id' => array(
          'type' => 'int',
          'unsigned' => TRUE,
          'not null' => TRUE
        ),
    ),

    'primary key' => array('id'),

  );

  return $schema;

}



  /**
  * Implements hook_install().
  * Installs module-required tables in the database.
  */
  function yetisync_install() {
    $success = drupal_install_schema('yetisync');
    if ($success) {
      drupal_set_message(st('yetisync module installed successfully.'));
    }
    else {
      drupal_set_message(st('The installation of yetisync module failed.'), 'error');
    }
  }


  function job_applications_uninstall() {
    $success = drupal_uninstall_schema('yetisync');
    if ($success) {
      drupal_set_message(st('yetisync module uninstalled successfully.'));
    }
    else {
      drupal_set_message(st('The uninstall of yetisync module failed.'), 'error');
    }
  }




